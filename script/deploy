#!/bin/sh
#
#

DEPLOY_DIR=../castequality.github.com
DIRECTORY=$(pwd)

if ! [ -d dist]; then
  # kill 'yeoman server' if running
  kill $(ps -ef | grep yeoman | grep -v grep | awk '{print $2}')
  # build the dist
  yeoman build
fi

cd DEPLOY_DIR
rm -rf *
cp -r $DIRECTORY/dist/* .
git add .
DATE=`date +%Y-%m-%d`
git commit -a -m "auto-deploy on $DATE"
git push origin master
cd $DIRECTORY